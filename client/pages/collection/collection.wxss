/* pages/collection/collection.wxss */
.job-list {
   margin: 40rpx;
  /* margin-top: 120rpx; */
}
.job-list .item {
  display: flex;
  padding: 40rpx 0;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}
.job-list .item:first-child {
  padding-top: 0;
}
.job-list .item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}
.job-list .item .logo {
  flex: 2;
}
.job-list .item .desc {
  flex: 5;
}
.job-list .item .salary {
  flex: 3;
}

.job-list .item .desc .title,
.job-list .item .desc .company,
.job-list .item .desc .claim {
  display: block;
}
.job-list .item .desc .title {
  /*font-weight: 700;*/
}
.job-list .item .desc .company {
  font-size: 32rpx;
  /*font-weight: 700;*/
  padding: 10rpx 0;
}
.job-list .item .desc .claim {
  font-size: 28rpx;
  color: #333;
  /*font-weight: 600;*/
  padding-top: 20rpx;
}
.job-list .item .salary {
  /*font-weight: 900;*/
  color: #f60;
  font-size: 36rpx;
  text-align: right;
}
.no-data {
  text-align: center;
  margin-top: 400rpx;
}